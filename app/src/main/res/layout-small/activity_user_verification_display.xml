<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.UserVerificationDisplayActivity">
    <LinearLayout
        android:id="@+id/ll_checkin_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/layout_border"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight=".7"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_checkin_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Check in \u0009\u0009:"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tx_checkin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="-:-"
                    android:textStyle="bold"
                    android:gravity="end|center"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_check_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_checkout_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Check out \u0009:"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tx_checkout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="-:-"
                    android:textStyle="bold"
                    android:gravity="end|center"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_checkin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_bg_layout"
                android:text="Check In"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg_layout"
                android:text="Check Out"
                android:textColor="#ffffff"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_contact_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="40dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:gravity="center"
            android:orientation="vertical">

            //user verified

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/verify_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:gravity="center|left"
                    android:text="User verified"
                    android:textColor="#026408"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
            //image view

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="187dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="7dp">

                    <ImageView
                        android:id="@+id/iv_userProfilePic"
                        android:layout_width="150dp"
                        android:layout_height="187dp"
                        android:padding="4dp"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            //username

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="0.33"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Organization :" />

                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:layout_weight="0.33"-->
                <!--android:textColor="#000"-->
                <!--android:textSize="14sp"-->
                <!--android:textStyle="bold"-->
                <!--android:text=":" />-->

                <TextView
                    android:id="@+id/tv_organization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_weight="0.33"
                    android:layout_marginLeft="7dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="22dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="0.33"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Contact ID :" />

                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="0.33"-->
                <!--android:gravity="center"-->
                <!--android:textColor="#000"-->
                <!--android:textSize="14sp"-->
                <!--android:textStyle="bold"-->
                <!--android:text=":" />-->

                <TextView
                    android:id="@+id/tv_contactId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="0.33"
                    android:text=""
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="22dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="0.33"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Badge Type :" />

                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="0.33"-->
                <!--android:textColor="#000"-->
                <!--android:textSize="14sp"-->
                <!--android:gravity="center"-->
                <!--android:textStyle="bold"-->
                <!--android:text=":" />-->

                <TextView
                    android:id="@+id/tv_badgeType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text=""
                    android:layout_marginLeft="7dp"
                    android:layout_weight="0.33"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="22dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="0.33"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Category :" />

                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="0.33"-->
                <!--android:gravity="center"-->
                <!--android:textColor="#000"-->
                <!--android:textSize="14sp"-->
                <!--android:textStyle="bold"-->
                <!--android:text=":" />-->

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text=""
                    android:layout_marginLeft="7dp"
                    android:layout_weight="0.33"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>


            //zone heading

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_zone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/zone"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:background="@color/blueBg"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/venue"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:background="@color/blueBg"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_previlege"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/previlege"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:background="@color/blueBg"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/Area"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="15dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:background="@color/blueBg"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
            //recycler

            <LinearLayout
                android:id="@+id/ll_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center|top"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_zone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="1dp">

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="1dp">

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_previlege"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="1dp">

                </androidx.recyclerview.widget.RecyclerView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="1dp">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/blueBg"
        android:padding="4dp"
        app:itemBackground="@color/blueBg"
        app:itemIconTint="#FFF"
        app:itemTextColor="#FFF"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        tools:ignore="NotSibling" />
</RelativeLayout>